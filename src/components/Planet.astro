---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
    planet: CollectionEntry<'planets'>;
};

const { planet } = Astro.props;
---

<article>
    <a href={`/planet/${planet.slug}`}>
    <Image src={planet.data.image} width={600} height={600 / 1.5} 
        alt={planet.data.title}
        class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cover"/>
    </a>
    <a href={`/planet/${planet.slug}`}
        class="text-4xl text-zinc-900 font-semibold inline-block">
        {planet.data.title}
    </a>
    <p class="text-zinc-500 text-2xl mb-9 line-clamp-2">
        {planet.body}
    </p>
</article>